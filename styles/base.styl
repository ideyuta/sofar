@charset 'UTF-8'

//-------------------------------
// Settings
//-------------------------------

@import 'normalize.css/normalize.css'
@import 'zenigame'

//-------------------------------
// Base
//-------------------------------

html, body
  font-family: Lato, Verdana, Arial, Roboto, "Droid Sans", "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, sans-serif
  font-size: 16px
  letter-spacing: 0.04em

a
  text-decoration: none
  &:link
    color: $blue700
  &:visited
    color: $blue900
  &:hover
    color: $blue500
    text-decoration: underline
  &:active
    color: $blue800
    text-decoration: underline

//-------------------------------
// Components
//-------------------------------

#react-mount
  maxsize(768px, auto)
  box-sizing: border-box
  padding: 0 24px

.PageList
  padding-left: 24px

.PageListItem
  padding: 2px 0
  &__createdAt
    color: $gray400
    font-size: .75rem
    margin: 0 0 0 8px

.PostHeader
  margin: 0 0 40px 0
  &__title
    font-size: 3rem
    font-weight: 400
  &__createdAt
    font-size: 0.88rem

//-------------------------------
// MarkDown
//-------------------------------

@import 'markdown'
