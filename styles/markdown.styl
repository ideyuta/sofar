$codeFont = Consolas, "Liberation Mono", Menlo, Courier, monospace;

.markdown
  clearfix()
  color: $gray900
  font-size: 16px
  line-height: 1.6
  text-size-adjust: 100%
  -webkit-text-size-adjust: 100%
  word-wrap: break-word

  *
    box-sizing: border-box;

  a
    text-decoration: none
    &:link
      color: $blue700
    &:visited
      color: $blue900
    &:hover
      color: $blue500
      text-decoration: underline
    &:active
      color: $blue800
      text-decoration: underline

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    font-weight: bold
    line-height: 1.4
    margin-bottom: 16px
    margin-top: 1em

  h1
    border-bottom: 1px solid $gray100
    font-size: 1.75rem
    line-height: 1.225
    padding-bottom: 0.3em

  h2
    font-size: 1.5rem
    line-height: 1.43

  h3
    font-size: 1.25rem

  h4
    font-size: 1rem

  h5
    font-size: .88rem

  h6
    color: $gray500
    font-size: .88rem

  hr
    clearfix()
    background-color: $gray200
    border: 0
    height: 1px
    margin: 16px 0
    overflow: hidden
    padding: 0

  div,
  p,
  blockquote,
  ul,
  ol,
  dl,
  table,
  pre
    margin-bottom: 16px
    margin-top: 0

  p
    font-size: .88rem
    code
      background-color: $gray50
      border-radius: 2px
      font-size: .75rem
      margin: 0 4px
      padding: 4px 6px

  blockquote
    color: $gray500
    border-left: 4px solid $gray200
    margin: 0
    padding: 0 16px

  ul,
  ol
    margin-bottom: 16px
    margin-top: 0

  ol ol,
  ul ol
    list-style-type: lower-roman
    margin-bottom: 0

  ul ul ol,
  ul ol ol,
  ol ul ol,
  ol ol ol
    list-style-type: lower-alpha

  li
    font-size: .88rem

  dl
    padding: 0
    dt
      font-size: 1rem
      font-style: italic
      font-weight: bold
      margin-top: 16px
      padding: 0
    dd
      margin-bottom: 16px
      margin-left: 0
      padding: 0 16px

  table
    display: block
    overflow: auto
    width: 100%
    word-break: normal
    word-break: keep-all

    th
      font-weight: bold

  th,
  td
    border: 1px solid $gray200
    padding: 6px 13px

  tr
    background-color: #fff
    border-top: 1px solid $gray200
    &:nth-child(2n)
      background-color: $gray50

  img
    background-color: #fff
    box-sizing: content-box
    max-width: 100%

  code,
  pre
    font-family: $codeFont

  pre
    background-color: $gray50
    border-radius: 3px
    font-size: .88rem
    margin-top: 0
    margin-bottom: 16px
    overflow: auto
    padding: 16px
    word-wrap: normal
    code
      background-color: transparent
      border: 0
      color: $gray700
      display: inline
      margin: 0
      padding: 0
      word-wrap: normal
